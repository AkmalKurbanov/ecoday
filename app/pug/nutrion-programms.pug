extends layouts/main
block title
  | Программы питания
block main
  .hero 
    .container
      .hero__wrap
        include includes/mixins
        +heroNutritionProgramms
  include includes/filter
  .container
    .block-wrap
      each item in foodDelivery
        .block.block--image-large 
          .block__img 
            img(src="images/dist/"+item.img, alt=item.name width="340" height="90")
            .block__logo 
              svg
                use(xlink:href='sprite.svg#'+item.logo) 
          .block__info 
            =item.name 
            span=item.programm 
          .block__info-counts 
            .block__info-item
              .block__info-icon
                svg
                  use(xlink:href='sprite.svg#'+item.kcalicon)
              span=item.kcal 
              | ккал/день
            .block__info-item 
              .block__info-icon
                svg
                  use(xlink:href='sprite.svg#'+item.eatcounticon)
              span=item.eatcount 
              | разовое
          .block__btn 
            a(href="#").btn.btn--transparent Подробнее  
            a(href="#").btn Заказать от 500 сом  

  include includes/range-script